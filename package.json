{
  "name": "node-project-deployment-manager",
  "type": "module",
  "version": "1.2.0",
  "description": "Automatic and continuous deployment manager to run deployment pipeline steps when projects update, running the project process and upgrading when new versions are available",
  "main": "./index.js",
  "scripts": {
    "start": "node ./index.js --help",
    "build-start": "node scripts/build.js && node node-deploy.cjs",
    "dev": "node scripts/build.js --watch && node node-deploy.cjs",
    "direct": "node index.js",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "node.js",
    "deployment",
    "development cycle",
    "project deployment",
    "self-hosted",
    "self-hosting",
    "continuous-integration",
    "continuous-delivery",
    "ci-cd",
    "cd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "20.14.2"
  }
}