{
  "name": "node-project-deployment-manager",
  "type": "module",
  "version": "1.0.0",
  "description": "Program to process CI/CD of Node.js projects executing deployment steps on update (continuous integration) and server process restart when new versions are available (continuous delivery).",
  "main": "./src/index.js",
  "scripts": {
    "start": "node scripts/build.js && node node-deploy.cjs",
    "dev": "node scripts/build.js --watch && node node-deploy.cjs",
    "direct": "node index.js",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "node.js",
    "deployment",
    "development cycle",
    "project deployment",
    "self-hosted",
    "self-hosting",
    "continuous-integration",
    "continuous-delivery",
    "ci-cd",
    "cd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.2"
  }
}
