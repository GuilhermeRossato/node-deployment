    "direct": "node index.js",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "node.js",
    "deployment",
    "development cycle",
    "project deployment",
    "self-hosted",
    "self-hosting",
    "continuous-integration",
    "continuous-delivery",
    "ci-cd",
    "cd"
  ],
