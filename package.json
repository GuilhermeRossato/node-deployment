{
  "name": "node-project-deployment-manager",
  "type": "module",
  "version": "1.1.0",
  "description": "Automatic and continuous deployment manager that execute deployment pipeline steps and manage the long-running project process, restarting it when new versios are available",
  "main": "./index.js",
  "scripts": {
    "start": "node ./index.js --help",
    "build-start": "node scripts/build.js && node node-deploy.cjs",
